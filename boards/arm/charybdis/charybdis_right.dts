/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include <dt-bindings/led/led.h>
#include "charybdis.dtsi"
#include "charybdis_pmw3610.dtsi"
#include "split_input_common.dtsi"

&pwm0 {
    status = "okay";
    pinctrl-0 = <&pwm0_default>;
    pinctrl-names = "default";
};

&pinctrl {
    pwm0_default: pwm0_default {
      group1 {
        psels = <14>; // Replace with the correct numeric pin value for your hardware
      };
    };

    spi3_default: spi1_default {
        group1 {
            psels = <NRF_PSEL(SPIM_MOSI, 0, 22)>;
        };
    };

    spi3_sleep: spi1_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_MOSI, 0, 22)>;
            low-power-enable;
        };
    };
};

&spi1 {
  compatible = "nordic,nrf-spim";
  status = "okay";
  pinctrl-0 = <&spi3_default>;
  pinctrl-1 = <&spi3_sleep>;
  pinctrl-names = "default", "sleep";

  led_strip: ws2812@0 {
    compatible = "worldsemi,ws2812-spi";
    label = "WS2812";

    /* SPI */
    reg = <0>; /* ignored, but necessary for SPI bindings */
    spi-max-frequency = <4000000>;

    /* WS2812 */
    chain-length = <27>; /* number of LEDs */
    spi-one-frame = <0x70>;
    spi-zero-frame = <0x40>;
    color-mapping = <LED_COLOR_ID_GREEN
                          LED_COLOR_ID_RED
                          LED_COLOR_ID_BLUE>;
  };
};

/ {
  leds: leds {
    compatible = "gpio-leds";
    blue_led: led_0 {
      gpios = <&gpio0 11 GPIO_ACTIVE_HIGH>;
      label = "Blue LED";
    };
  };

  ext-power {
    compatible = "zmk,ext-power-generic";
    label = "EXT_POWER";
    control-gpios = <&gpio1 4 GPIO_ACTIVE_HIGH>;
    init-delay-ms = <50>;
  };
};

&default_transform {
	col-offset = <6>;
};

&kscan0 {
    compatible = "zmk,kscan-gpio-matrix";

    col-gpios
        = <&gpio1 4   (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        , <&gpio1 2   (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        , <&gpio1 3   (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        , <&gpio0 3   (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        , <&gpio1 15  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        , <&gpio1 13  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
    ;
    row-gpios
        = <&gpio1 1   GPIO_ACTIVE_HIGH>
        , <&gpio1 6   GPIO_ACTIVE_HIGH>
        , <&gpio0 10  GPIO_ACTIVE_HIGH>
        , <&gpio0 9   GPIO_ACTIVE_HIGH>
        , <&gpio1 10  GPIO_ACTIVE_HIGH>
    ;
};

&trackball_split {
    device = <&trackball>;
};
